<article class="post dash-of-milk h-entry" itemscope itemtype="http://schema.org/BlogPosting" data-category="<%= page.canonical_category %>">
  <header class="post-header">
    <h2 class="post-title p-name" itemprop="name headline">
      <%= page.title %>
    </h2>
    <p class="post-meta">
      <time class="dt-published" datetime="<%= page.date.iso8601 %>" itemprop="datePublished">
        <%= page.date.strftime "%b %-d, %Y" %>
      </time>

  </header>

  <div class="post-content e-content" itemprop="articleBody">
    <%= content %>
  </div>
</article>
